<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/liftyourlife_pic"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/liftyourlife_image"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/liftyourlife_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פרופיל"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/liftyourlife_image"
        app:layout_constraintEnd_toEndOf="@+id/liftyourlife_image"
        app:layout_constraintStart_toStartOf="@+id/liftyourlife_image"
        app:layout_constraintTop_toTopOf="@+id/liftyourlife_image" />
</androidx.constraintlayout.widget.ConstraintLayout>