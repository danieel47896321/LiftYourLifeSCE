<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TextViewSearchHeight"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/dark_blue"
                android:drawableEnd="@drawable/drop_down"
                android:drawableRight="@drawable/drop_down"
                android:hint="@string/Height"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TextViewSearchWeight"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/dark_blue"
                android:drawableEnd="@drawable/drop_down"
                android:drawableRight="@drawable/drop_down"
                android:gravity="center"
                android:hint="@string/Weight"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/height_vali" />

            <TextView
                android:id="@+id/TextViewSearchAge"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/dark_blue"
                android:drawableEnd="@drawable/drop_down"
                android:drawableRight="@drawable/drop_down"
                android:gravity="center"
                android:hint="@string/Age"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weight_vali" />

            <TextView
                android:id="@+id/TextViewSearchGender"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/dark_blue"
                android:drawableEnd="@drawable/drop_down"
                android:drawableRight="@drawable/drop_down"
                android:gravity="center"
                android:hint="@string/Gender"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TextViewSearchAge" />

        <TextView
            android:id="@+id/height_vali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Required"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/weight_vali"
            app:layout_constraintStart_toStartOf="@+id/weight_vali"
            app:layout_constraintTop_toBottomOf="@+id/TextViewSearchHeight" />

        <TextView
            android:id="@+id/age_vali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Required"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/gender_vali"
            app:layout_constraintStart_toStartOf="@+id/gender_vali"
            app:layout_constraintTop_toBottomOf="@+id/TextViewSearchAge" />

        <TextView
            android:id="@+id/weight_vali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Required"
            android:textColor="@color/red"
            android:visibility="gone"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/gender_vali"
            app:layout_constraintStart_toStartOf="@+id/gender_vali"
            app:layout_constraintTop_toBottomOf="@+id/TextViewSearchWeight" />

        <TextView
            android:id="@+id/gender_vali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Required"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/TextViewSearchHeight"
            app:layout_constraintStart_toStartOf="@+id/TextViewSearchGender"
            app:layout_constraintTop_toBottomOf="@+id/TextViewSearchGender" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                app:layout_constraintTop_toBottomOf="@+id/gender_vali">

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Finish"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/TextViewSearchGender"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/TextViewSearchGender"
                    app:layout_constraintTop_toBottomOf="@+id/TextViewSearchGender"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
